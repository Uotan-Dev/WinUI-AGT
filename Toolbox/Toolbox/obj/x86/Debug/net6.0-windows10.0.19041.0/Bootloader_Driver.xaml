<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Toolbox.Bootloader_Driver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Toolbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <TextBlock Text="Bootloader锁与驱动" Style="{StaticResource TitleTextBlockStyle}"/>
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:ConnectionId='4' x:Name="PickUnlockFileButton" Content="选择解锁文件"
                                                   Margin="0,10,0,10"/>
            <TextBlock x:ConnectionId='5' x:Name="PickUnlockFileOutputTextBlock" TextWrapping="Wrap" Padding="20,5,0,0"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:ConnectionId='2' x:Name="UnlockNowButton" Content="立即解锁"
                                              Margin="0,0,10,10"/>
            <Button x:ConnectionId='3' x:Name="RelockBootloaderButton" Content="回锁BL"
                                                     Margin="0,0,0,10"/>
        </StackPanel>
    </StackPanel>
</Page>

