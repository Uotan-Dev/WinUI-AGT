<?xml version="1.0" encoding="utf-8"?>
<Window x:ConnectionId='1'
    x:Class="Toolbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Toolbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Border
                Canvas.ZIndex="0"
                IsHitTestVisible="False">
            <Grid
                    Height="48"
                    Margin="48,0,0,0"
                    VerticalAlignment="Top"
                    Padding="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image x:ConnectionId='14'
                        x:Name="AppFontIcon"
                        Width="16"
                        Height="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="/Assets/Square44x44Logo.png" />
                <TextBlock x:ConnectionId='15'
                        Margin="12,0,0,0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                                                               />
            </Grid>
        </Border>
        <Grid x:ConnectionId='2' Name="PageContainer">
            <NavigationView x:ConnectionId='3' x:Name="NavigationViewControl" IsTitleBarAutoPaddingEnabled="False"                                                                                                        PaneDisplayMode="Auto"  PaneTitle="Android 极客工具箱" IsSettingsVisible="False">
                <NavigationView.Header>
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock Text="设备状态：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='4' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="conninfo" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock Text="BL锁状态：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='5' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="BLinfo" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock Text="VAB状态：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='6' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="VABinfo" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock Text="设备代号：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='7' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="productinfo" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <Button x:ConnectionId='8' x:Name="checkconn" Content="检查连接状态"                        Margin="15,0,0,0"></Button>
                    </StackPanel>
                </NavigationView.Header>
                <NavigationView.AutoSuggestBox>
                    <AutoSuggestBox x:ConnectionId='9' x:Name="ASB" PlaceholderText="搜索" QueryIcon="Find"                                                                    />
                </NavigationView.AutoSuggestBox>
                <NavigationView.MenuItems>
                    <NavigationViewItem x:ConnectionId='10' Icon="Play" Content="BL锁及驱动" Tag="Bootloader_Driver" Name="BLDriverMenuItem"/>
                    <NavigationViewItem x:ConnectionId='11' Icon="Save" Content="刷入Rec及重启" Tag="Rec_Reboot" Name="RecRebootMenuItem"/>
                </NavigationView.MenuItems>
                <NavigationView.FooterMenuItems>
                    <NavigationViewItem x:ConnectionId='12' Icon="Setting" Content="设置" Tag="Setting" Name="Setting"/>
                </NavigationView.FooterMenuItems>
                <Frame x:ConnectionId='13' x:Name="ContentFrame"                                    Padding="55,10,0,0"/>
            </NavigationView>
        </Grid>
    </Grid>
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>
</Window>

