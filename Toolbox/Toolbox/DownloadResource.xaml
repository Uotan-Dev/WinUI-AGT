<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Toolbox.DownloadResource"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="PageContainer">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="下载" Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock x:Name="ShowText" Text="准备下载" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:Name="ProgressPercent"  Text="您的Data分区可用空间约为" Style="{StaticResource BodyTextBlockStyle}"/>
            <ProgressBar x:Name="PraogressPercentBar" Width="150" Value="0" />
        </StackPanel>
    </Grid>
</Window>
