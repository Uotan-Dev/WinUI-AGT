<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Toolbox.Rec_Reboot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="刷入Recovery" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='14' x:Name="PickRecFile" Content="选择Recovery"                          Margin="0,10,10,10"/>
                <TextBox x:ConnectionId='15' x:Name="PickRecFileOutputTextBlock" TextWrapping="Wrap" Margin="0,10,10,10"
                         IsReadOnly="True" IsHitTestVisible="False" PlaceholderText="请选择文件" MinWidth="150" FontStyle="Italic"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='11' x:Name="FlashRec" Content="刷入至Recovery"                       Margin="0,10,10,10"/>
                <Button x:ConnectionId='12' x:Name="FlashRecA" Content="刷入至Recovery A分区"                        Margin="0,10,10,10"/>
                <Button x:ConnectionId='13' x:Name="FlashRecB" Content="刷入至Recovery B分区"                        Margin="0,10,10,10"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='8' x:Name="BootImg" Content="临时启动"                      Margin="0,10,10,10"/>
                <Button x:ConnectionId='9' x:Name="FlashBootA" Content="刷入至Boot A分区"                         Margin="0,10,10,10"/>
                <Button x:ConnectionId='10' x:Name="FlashBootB" Content="刷入至Boot B分区"                         Margin="0,10,10,10"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='6' x:Name="DisableOffRec" Content="阻止恢复官方Recovery"                            Margin="0,10,10,10"/>
                <Button x:ConnectionId='7' x:Name="FlashMagisk" Content="刷入Magisk"                          Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="Fastboot重启" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <ComboBox x:ConnectionId='4' x:Name="FastbootRebootMode" Width="200" Margin="0,10,10,10" PlaceholderText="重启至...">
                    <ComboBoxItem Content="Recovery"/>
                    <ComboBoxItem Content="系统"/>
                    <ComboBoxItem Content="9008"/>
                    <ComboBoxItem Content="Fastbootd"/>
                    <ComboBoxItem Content="Bootloader"/>
                </ComboBox>
                <Button x:ConnectionId='5' Content="重启"                             Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="ADB重启" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <ComboBox x:ConnectionId='2' x:Name="AdbRebootMode" Width="200" Margin="0,10,10,10" PlaceholderText="重启至...">
                    <ComboBoxItem Content="Recovery"/>
                    <ComboBoxItem Content="系统"/>
                    <ComboBoxItem Content="9008"/>
                    <ComboBoxItem Content="Fastbootd"/>
                    <ComboBoxItem Content="Sideload"/>
                    <ComboBoxItem Content="TWRP重启至Sideload"/>
                </ComboBox>
                <Button x:ConnectionId='3' Content="重启"                        Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>

