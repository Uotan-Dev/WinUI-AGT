<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Toolbox.BootloaderDriver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <StackPanel VerticalAlignment="Top" Orientation="Vertical" Margin="0,20,0,0">
            <TextBlock Text="设备解锁" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='11' Content="选择解锁文件"                             Margin="0,10,10,10"/>
                <TextBox x:ConnectionId='12' x:Name="PickUnlockFileOutputTextBlock" TextWrapping="Wrap" Margin="0,10,10,10"
                         IsReadOnly="True" IsHitTestVisible="False" PlaceholderText="请选择文件" MinWidth="150" FontStyle="Italic"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='9' Content="立即解锁"                               Margin="0,10,10,10" Width="185"/>
                <Button x:ConnectionId='10' Content="回锁BL"                               Margin="0,10,0,10" Width="185"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical" Margin="0,20,0,0">
            <TextBlock Text="基本解锁命令" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <ComboBox x:ConnectionId='7' x:Name="UnlockShell" Width="200" Margin="0,10,10,10" PlaceholderText="选择解锁命令">
                    <ComboBoxItem Content="oem unlock"/>
                    <ComboBoxItem Content="oem unlock-go"/>
                    <ComboBoxItem Content="flashing unlock"/>
                    <ComboBoxItem Content="flashing unlock_critical"/>
                </ComboBox>
                <Button x:ConnectionId='8' Content="执行解锁命令"                        Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical" Margin="0,20,0,0">
            <TextBlock Text="其他解锁工具" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='5' Content="小米解锁工具"                           Margin="0,10,10,10"/>
                <Button x:ConnectionId='6' Content="ViQoo解锁工具"                          Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical" Margin="0,20,0,0">
            <TextBlock Text="驱动补丁" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='2' Content="安装ADB和Fastboot驱动"                         Margin="0,10,10,10"/>
                <Button x:ConnectionId='3' Content="安装高通9008驱动"                     Margin="0,10,10,10"/>
                <Button x:ConnectionId='4' Content="小米设备USB3.0补丁"                     Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>

