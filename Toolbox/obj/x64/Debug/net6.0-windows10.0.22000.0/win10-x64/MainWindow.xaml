<?xml version="1.0" encoding="utf-8"?>
<Window x:ConnectionId='1'
    x:Class="Toolbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid x:ConnectionId='2' Name="PageContainer">
        <Grid x:ConnectionId='3'
            x:Name="AppTitleBar"
            Height="48"
            Margin="48,0,0,0"
            VerticalAlignment="Top"
            Padding="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image x:ConnectionId='19'
                x:Name="AppFontIcon"
                Width="16"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="/Images/Square44x44Logo.scale-100.png" />
            <TextBlock x:ConnectionId='20'
                Margin="12,0,0,0"
                Grid.Column="1"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                                                       />
        </Grid>
        <NavigationView x:ConnectionId='4'
            x:Name="NavigationViewControl"
            PaneTitle="Android 极客工具箱"
            IsTitleBarAutoPaddingEnabled="False"
            AlwaysShowHeader="True"
                                                               
                                                           
            PaneDisplayMode="Auto">
            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox x:ConnectionId='5' x:Name="ASB" PlaceholderText="搜索" QueryIcon="Find"                                                                    />
            </NavigationView.AutoSuggestBox>
            <NavigationView.PaneCustomContent>
                <StackPanel VerticalAlignment="Top" Orientation="Vertical" Margin="0,0,55,0">
                    <ProgressBar x:ConnectionId='6' x:Name="LoadingBar" Width="auto" IsIndeterminate="False" ShowPaused="False" ShowError="False" Margin="0,0,0,0"/>
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock Text="设备状态：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='12' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="conninfo" TextWrapping="Wrap" Padding="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock Text="BL锁状态：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='11' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="BLinfo" TextWrapping="Wrap" Padding="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock Text="VAB状态：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='10' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="VABinfo" TextWrapping="Wrap" Padding="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock Text="设备代号：" Style="{StaticResource BodyStrongTextBlockStyle}" TextWrapping="Wrap" Padding="20,5,0,0"/>
                        <TextBlock x:ConnectionId='9' Text="未知" Style="{StaticResource BodyTextBlockStyle}" x:Name="productinfo" TextWrapping="Wrap" Padding="0,5,0,0"/>
                    </StackPanel>
                    <Button x:ConnectionId='7' x:Name="checkconn" Content="检查连接"                        Margin="15,0,0,0"></Button>
                    <InfoBar x:ConnectionId='8' x:Name="LoadingTip" IsOpen="False" Severity="Warning" Title="操作中"/>
                </StackPanel>
            </NavigationView.PaneCustomContent>
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='13' Icon="WebCam" Content="Bootloader 和驱动" Tag="Toolbox.BootloaderDriver" Name="BLDriverMenuItem"/>
                <NavigationViewItem x:ConnectionId='14' Icon="Sync" Content="刷入Rec及重启" Tag="Toolbox.Rec_Reboot" Name="RecRebootMenuItem"/>
                <NavigationViewItem x:ConnectionId='15' Icon="Repair" Content="线刷ROM" Tag="Toolbox.FlashRom" Name="FlashRomMenuItem"/>
                <NavigationViewItem x:ConnectionId='16' Icon="More" Content="自定义刷入" Tag="Toolbox.MoreFlash" Name="MoreFlashMenuItem"/>
                <NavigationViewItem x:ConnectionId='17' Icon="Keyboard" Content="Mindows工具箱" Tag="Toolbox.MindowsTool" Name="MindowsToolMenuItem"/>
            </NavigationView.MenuItems>
            <Frame x:ConnectionId='18' x:Name="ContentFrame"                                    Padding="55,10,0,0"/>
        </NavigationView>
    </Grid>
</Window>

