<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Toolbox.FlashRom"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Margin="0,0,0,10">
    <ScrollViewer>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <TextBlock Text="Fastboot" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <Button x:ConnectionId='12' x:Name="PickFastbootFile"  Content="选择文件"                               Margin="0,10,10,10"/>
                    <TextBox x:ConnectionId='13' x:Name="PickFastbootFileOutput" TextWrapping="Wrap" Margin="0,10,10,10"
                         IsReadOnly="True" IsHitTestVisible="False" PlaceholderText="请选择文件" MinWidth="150" FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <TextBlock Text="Fastbootd" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <Button x:ConnectionId='10' x:Name="PickFastbootdFile" Content="选择文件"                                Margin="0,10,10,10"/>
                    <TextBox x:ConnectionId='11' x:Name="PickFastbootdFileOutput" TextWrapping="Wrap" Margin="0,10,10,10"
                             IsReadOnly="True" IsHitTestVisible="False" PlaceholderText="请选择文件" MinWidth="150" FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <TextBlock Text="小米线刷脚本" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <Button x:ConnectionId='8' x:Name="PickMiScript" Content="选择文件"                           Margin="0,10,10,10"/>
                    <TextBox x:ConnectionId='9' x:Name="PickMiScriptOutput" TextWrapping="Wrap" Margin="0,10,10,10"
                             IsReadOnly="True" IsHitTestVisible="False" PlaceholderText="请选择文件" MinWidth="150" FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <TextBlock Text="选项" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <TextBlock Text="清除全部数据" Margin="0,10,10,10"/>
                    <ToggleSwitch x:ConnectionId='6' x:Name="ClearDataToggle" />
                    <TextBlock Text="小米线刷脚本" Margin="0,10,10,10"/>
                    <ToggleSwitch x:ConnectionId='7' x:Name="FlashBatToggle" />
                </StackPanel>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <Button x:ConnectionId='4' x:Name="SetAButton" Content="切换至槽位A"                   Margin="0,10,10,10"/>
                    <Button x:ConnectionId='5' x:Name="SetBButton" Content="切换至槽位B"                   Margin="0,10,10,10"/>
                </StackPanel>
                <Button x:ConnectionId='3' x:Name="FlashRomButton" Content="开始刷机"                       Margin="0,10,10,10"/>
            </StackPanel>
            <Expander IsExpanded="True" Header="终端显示" Width="500">
                <Expander.Content>
                    <Grid>
                        <TextBox x:ConnectionId='2' x:Name="FlashShow" IsReadOnly="True" IsHitTestVisible="False" Width="500"  MinHeight="300"></TextBox>
                    </Grid>
                </Expander.Content>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Page>

