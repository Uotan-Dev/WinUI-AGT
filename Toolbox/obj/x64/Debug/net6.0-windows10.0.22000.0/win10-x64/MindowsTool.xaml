<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Toolbox.MindowsTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='34' Content="下载资源"                                 Margin="0,10,10,10"></Button>
                <Button x:ConnectionId='35' Content="打开一键安装工具"                          Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="选择机型" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <ComboBox x:ConnectionId='33' x:Name="ChooseModel" Width="200" Margin="0,10,10,10" PlaceholderText="请选择您的机型">
                    <ComboBoxItem Content="小米MIX2S"/>
                    <ComboBoxItem Content="小米8"/>
                    <ComboBoxItem Content="小米MIX3"/>
                    <ComboBoxItem Content="小米9"/>
                    <ComboBoxItem Content="小米6"/>
                    <ComboBoxItem Content="小米平板5"/>
                    <ComboBoxItem Content="Redmi K20 Pro"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="注册表相关" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='29' Content="不联网过开机向导"                     Margin="0,10,10,10"/>
                <Button x:ConnectionId='30' Content="修复开机报错"                      Margin="0,10,10,10"/>
                <Button x:ConnectionId='31' Content="修改USB模式"                       Margin="0,10,10,10"/>
                <Button x:ConnectionId='32' Content="卸载/挂载注册表"                      Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="UEFI" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='26' Content="选择文件"                           Margin="0,10,10,10"/>
                <TextBox x:ConnectionId='27' x:Name="PickUefiFileOutputTextBlock" TextWrapping="Wrap" Margin="0,10,10,10"
                 IsReadOnly="True" IsHitTestVisible="False" PlaceholderText="请选择文件" MinWidth="150" FontStyle="Italic"/>
                <Button x:ConnectionId='28' x:Name="BootUefiButton" Content="临时启动"                       Margin="0,10,10,10"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='22' x:Name="FlashUefiBootButton" Content="刷入UEFI到Boot"                            Margin="0,10,10,10"/>
                <Button x:ConnectionId='23' x:Name="FlashUefiBootAButton" Content="刷入UEFI到Boota"                             Margin="0,10,0,10"/>
                <Button x:ConnectionId='24' x:Name="FlashUefiBootBButton" Content="刷入UEFI到Bootb"                             Margin="0,10,0,10"/>
                <Button x:ConnectionId='25' x:Name="FlashUefiRecoveryButton" Content="刷入UEFI到刷入UEFI到Recovery"                                Margin="0,10,0,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="恢复" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='18' x:Name="RecoverBootButton" Content="恢复Boot"                          Margin="0,10,10,10"/>
                <Button x:ConnectionId='19' x:Name="RecoverBootAButton" Content="恢复Boot到A"                             Margin="0,10,10,10"/>
                <Button x:ConnectionId='20' x:Name="RecoverBootBButton" Content="恢复Boot到B"                             Margin="0,10,10,10"/>
                <Button x:ConnectionId='21' Content="恢复分区表"                     Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="格式化" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='16' Content="格式化ESP"                   Margin="0,10,10,10"/>
                <Button x:ConnectionId='17' Content="格式化Windows"                       Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="修复" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='8' Content="修复引导"                Margin="0,10,10,10"/>
                <Button x:ConnectionId='9' Content="禁用驱动签名"                           Margin="0,10,10,10"/>
                <Button x:ConnectionId='10' Content="标记EFI分区"                  Margin="0,10,10,10"/>
                <Button x:ConnectionId='11' Content="刷入Devcfg"                     x:Name="FlashDevcfgButton" Margin="0,10,10,10"/>
                <Button x:ConnectionId='12' Content="安装驱动"                      Margin="0,10,10,10"/>
                <Button x:ConnectionId='13' Content="打开Dism++"                  Margin="0,10,10,10"/>
                <Button x:ConnectionId='14' Content="进入大容量模式"                       x:Name="EnterMassModeButton" Margin="0,10,10,10"/>
                <Button x:ConnectionId='15' Content="重装Windows"                          Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Text="其它" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button x:ConnectionId='2' Content="加入交流群"                   Margin="0,10,10,10"/>
                <Button x:ConnectionId='3' Content="打开备份文件夹"                          Margin="0,10,10,10"/>
                <Button x:ConnectionId='4' Content="Mindows官网"                         Margin="0,10,10,10"/>
                <Button x:ConnectionId='5' Content="官方操作视频"                       Margin="0,10,10,10"/>
                <Button x:ConnectionId='6' Content="下载推荐系统镜像"                                Margin="0,10,10,10"/>
                <Button x:ConnectionId='7' Content="下载更多系统镜像"                           Margin="0,10,10,10"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>

