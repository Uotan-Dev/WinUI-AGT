<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Toolbox.MindowsInstall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="PageContainer">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="Mindows一键安装" Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock x:Name="ShowText" Text="准备开始" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:Name="TipsText" Style="{StaticResource CaptionTextBlockStyle}"/>
            <Expander IsExpanded="True" Header="终端显示" Width="500">
                <Expander.Content>
                    <Grid>
                        <TextBox x:Name="ShellShow" IsReadOnly="True" IsHitTestVisible="False" Width="500"  MinHeight="300"></TextBox>
                    </Grid>
                </Expander.Content>
            </Expander>
        </StackPanel>
    </Grid>
</Window>
